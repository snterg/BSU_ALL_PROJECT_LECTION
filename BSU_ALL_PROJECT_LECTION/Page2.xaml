<Window x:Class="BSU_ALL_PROJECT_LECTION.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BSU_ALL_PROJECT_LECTION"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2" >

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid Background="ForestGreen" >
        <StackPanel >
        <TextBlock x:Name="static_t" Text="Здесь будет текст из статического класса:"/>
            <TextBlock x:Name="construct_t" Text="Здесь будет текст из конструктора с параметром:"/>
            <TextBox x:Name="input_1" FontSize="24" Text="{Binding Path=Data}"/>
            <Button Content="OK" Click="Button_Click"/>
            <Button Content="Cancel" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
